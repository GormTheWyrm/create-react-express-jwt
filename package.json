  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.6.1",
    "nodemon": "^1.18.3"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.6",
    "morgan": "^1.9.1"
  }
}
